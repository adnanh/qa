{
    "success": true,
    "response": {
        "user":
            {
                "id": <%= @user.id %>,
                "username": "<%= @user.username %>",
                "registered": "<%= @user.created_at.to_formatted_s(:ddmmyyyyhhmm_format) %>",
                "last_activity": "<%= @user.current_sign_in_at.to_formatted_s(:ddmmyyyyhhmm_format)%>",
                "banned": <%= @user.banned %>,
                "privilege": "<%= @user.user_privilege.name %>",
                "privilege_id": <%= @user.user_privilege_id %>,
                "karma": <%= @user.karma %>,
                "avatar": "<%= @user.image.url(:medium) %>",
                "questions": [
                    <% @questions.each_with_index do |question, ind| %>
                    {
                        "id": <%= question.id %>,
                        "title": "<%= question.title %>",
                        "asked_at": "<%= question.created_at.to_formatted_s(:ddmmyyyyhhmm_format) %>"
                    }<%= ',' if ind!=(@questions.length-1) %>
                    <% end %>
                ],
                "answers": [
                    <% @answers.each_with_index do |answer, ind| %>
                    {
                        "question_id": <%= answer.question.id %>,
                        "question_title": "<%= answer.question.title %>",
                        "answered_at": "<%= answer.created_at.to_formatted_s(:ddmmyyyyhhmm_format) %>"
                    }<%= ',' if ind!=(@answers.length-1) %>
                    <% end %>
                ]
            }
    }
}