<%= devise_error_messages! %>

<div class="col-lg-6 col-lg-offset-3">
  <div class="panel panel-default">
    <div class="panel-heading"><b>Change your password</b></div>
    <div class="panel-body">
      <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
          <%= f.hidden_field :reset_password_token %>

          <div class="form-group row">
            <div class="col-lg-4">
              <%= f.label :password, "New password", :class => "control-label" %>
            </div>
            <div class="col-lg-8">
              <%= f.password_field :password, :class => "form-control", :autocomplete => "off", :autofocus => "true" %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-lg-4">
              <%= f.label :password_confirmation, "Confirm new password", :class => "control-label" %>
            </div>
            <div class="col-lg-8">
              <%= f.password_field :password_confirmation, :class => "form-control", :autocomplete => "off", :autofocus => "true" %>
            </div>
          </div>

          <div class="form-group row">
            <div class="pull-right" style="padding-right: 15px;">
              <%= f.submit "Change my password", :class => "btn btn-primary" %>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>