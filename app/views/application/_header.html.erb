<div class="navbar navbar-default" ng-controller="HeaderCtrl">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/#/home">{{i18n.t.HOMEPAGE}}</a>
    </div>
    <div class="navbar-collapse collapse navbar-responsive-collapse">
      <ul class="nav navbar-nav">
        <% if is_logged_in? %>
        <li class="active"><a href="/#/ask">{{i18n.t.ASK}}</a></li>
        <% end %>
        <% if is_admin? %>
        <li><a href="/#/admin-panel">{{i18n.t.ADMIN_PANEL}}</a></li>
        <% end %>
        <li class="dropdown">
          <a href="" class="dropdown-toggle">
            {{i18n.t.LANGUAGE}}
          </a>
          <ul class="dropdown-menu">
            <li>
              <a href="" ng-click="change_loc('en')">{{i18n.t.ENGLISH}}</a>
              <a href="" ng-click="change_loc('bs')">{{i18n.t.BOSNIAN}}</a>
            </li>
          </ul>
        </li>
      </ul>

      <form class="navbar-form navbar-left">
        <input type="text" class="form-control col-lg-8" placeholder="{{i18n.t.SEARCH}}">
      </form>

        <% if user_signed_in? %>
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <button class="btn btn-default dropdown-toggle" data-toggle="dropdown" style="padding-top: 12px; padding-bottom: 15px; padding-left: 7px !important;">{{i18n.t.WELCOME}}, <%= current_user.username %> <%= image_tag current_user.image.url(:small) %> <b class="caret"></b></button>
              <ul class="dropdown-menu">
                <li><%= link_to '{{i18n.t.EDIT_PROFILE}}', edit_user_registration_path %></li>
                <li class="divider"></li>
                <li><%= link_to '{{i18n.t.LOGOUT}}', destroy_user_session_path %></li>
              </ul>
            </li>
            <li><a href="#/pm/inbox">{{i18n.t.MESSAGES}}</a></li>
          </ul>
        <% else %>
          <div class="nav navbar-nav navbar-right">
            <div style="padding-top: 15px; padding-bottom: 15px;"><%= link_to '{{i18n.t.SIGN_IN}}', new_user_session_path %>  {{i18n.t.OR}} <%= link_to "{{i18n.t.CREATE_NEW_ACCOUNT}}", new_user_registration_path %>.</div>
          </div>
        <% end %>
    </div>
  </div>
</div>